<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nishanth.com.inclassattendance">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".StartScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="Registration"/>
        <activity android:name=".ProfessorHomeScreen"
            android:label="User Home"/>
        <activity android:name=".ViewAttendance"
            android:label="View registered attendance"/>
        <activity android:name=".ViewAttendanceProfessor"
            android:label="View registered attendance"/>
        <activity android:name=".ViewProfessorClasses"
            android:label="View My Classes"/>
        <activity android:name=".EnrollClass"
            android:label="Enroll a new class"/>
        <activity android:name=".LoginScreen"
            android:label="User Login"/>
        <activity android:name=".HomeScreen"
            android:label="Student Home"
            android:screenOrientation="fullUser"/>
    </application>

</manifest>
